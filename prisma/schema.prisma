generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id               String         @id @default(cuid())
  title            String
  bookTitle        String
  bookAuthor       String?
  location         String
  date             DateTime
  totalSpots       Int
  description      String?
  isActive         Boolean        @default(true)
  reminderSentAt   DateTime?      // Track when reminder was sent
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  registrations    Registration[]

  @@index([date])
  @@index([isActive])
  @@index([isActive, date])  // Composite index for active upcoming events query
}

model Registration {
  id              String    @id @default(cuid())
  eventId         String
  name            String
  instagramHandle String
  email           String?   // Optional email for notifications
  receiptUrl      String?   // Base64 encoded receipt image
  status          String    @default("confirmed")
  cancelToken     String?   @unique // Token for self-cancellation
  createdAt       DateTime  @default(now())
  event           Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, email])    // Prevent duplicate registrations per event at DB level
  @@index([eventId])
  @@index([cancelToken])
  @@index([eventId, status])    // Composite index for confirmed registrations per event
  @@index([eventId, createdAt]) // Index for ordered registration lists
}
